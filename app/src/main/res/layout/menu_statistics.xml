<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mood_bg"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/upbar_arrow_left"
            android:layout_width="15dp"
            android:layout_height="38dp"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:adjustViewBounds="true"
            android:padding="0sp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/mood_arrow_left" />

        <ImageButton
            android:id="@+id/upbar_arrow_right"
            android:layout_width="15dp"
            android:layout_height="38dp"
            android:layout_gravity="right"
            android:layout_marginTop="6dp"
            android:layout_marginRight="10dp"
            android:adjustViewBounds="true"
            android:padding="0sp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/mood_arrow_right" />

        <EditText
            android:id="@+id/upbar_dateBox"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/mood_"
            android:layout_marginBottom="22dp"
            android:ems="10"
            android:inputType="date"
            android:singleLine="true" />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgText_activities"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:padding="0sp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_marginLeft="32dp"
                android:layout_marginBottom="8dp"
                app:srcCompat="@drawable/mood_activities" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                app:srcCompat="@drawable/mood_ber" />

            <ImageView
                android:id="@+id/imgText_weight"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:padding="0sp"
                android:layout_marginBottom="8dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_marginLeft="32dp"
                app:srcCompat="@drawable/mood_weight" />

            <ImageView
                android:id="@+id/bar2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                app:srcCompat="@drawable/mood_ber" />

            <ImageView
                android:id="@+id/imgText_emotion"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:padding="0sp"
                android:layout_marginBottom="8dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_marginLeft="32dp"
                app:srcCompat="@drawable/mood_emotion" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>