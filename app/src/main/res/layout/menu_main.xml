<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mood_bg"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/upbar_arrow_left"
            android:layout_width="15dp"
            android:layout_height="38dp"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:adjustViewBounds="true"
            android:padding="0sp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/mood_arrow_left" />

        <ImageButton
            android:id="@+id/upbar_arrow_right"
            android:layout_width="15dp"
            android:layout_height="38dp"
            android:layout_gravity="right"
            android:layout_marginTop="6dp"
            android:layout_marginRight="10dp"
            android:adjustViewBounds="true"
            android:padding="0sp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/mood_arrow_right" />

        <TextView
            android:id="@+id/upbar_dateBox"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/mood_"
            android:ems="10"
            android:singleLine="true" />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- main LinearLayout-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!-- child 1 layout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/bt_emotion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="52dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginVertical="30dp"
                    android:layout_weight="5"
                    android:adjustViewBounds="true"
                    android:padding="0sp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/mood_button_emoji" />

                <LinearLayout
                    android:layout_width="285dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="52dp"
                    android:layout_marginVertical="43dp"
                    android:layout_weight="1"

                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/bt_color5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:padding="0sp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/mood_button_color4" />

                    <ImageButton
                        android:id="@+id/bt_color4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:padding="0sp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/mood_button_color1" />

                    <ImageButton
                        android:id="@+id/bt_color3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:padding="0sp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/mood_button_color3" />

                    <ImageButton
                        android:id="@+id/bt_color2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:padding="0sp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/mood_button_color2" />

                    <ImageButton
                        android:id="@+id/bt_color1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:padding="0sp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/mood_button_color0" />
                </LinearLayout>
            </LinearLayout>

            <!-- child 2 layout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editText_schedule"
                    android:layout_width="wrap_content"
                    android:layout_height="110dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:hint="일정을 기록하세요."
                    android:background="@drawable/mood_textblock_big" />

                <ImageButton
                    android:id="@+id/bt_schedule_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0sp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_marginLeft="34dp"
                    android:layout_marginRight="34dp"
                    app:srcCompat="@drawable/mood_button_save" />

                <ImageView
                    android:id="@+id/bar1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    app:srcCompat="@drawable/mood_ber" />

                <ImageView
                    android:id="@+id/imgText_schedule"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:padding="0sp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_marginLeft="32dp"
                    android:layout_marginBottom="8dp"
                    app:srcCompat="@drawable/mood_schedule" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_aschedule_dot"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:padding="0sp"
                        android:scaleType="fitCenter"
                        android:layout_marginLeft="32dp"
                        android:layout_marginTop="23dp"
                        app:srcCompat="@drawable/mood_dot" />

                    <TextView
                        android:id="@+id/txt_schedule"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="16dp"
                        android:text="일찍 일어나기"
                        android:textColor="@android:color/white"
                        android:textSize="16.5sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    app:srcCompat="@drawable/mood_ber" />

                <ImageView
                    android:id="@+id/imgText_activities"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:padding="0sp"
                    android:layout_marginBottom="8dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_marginLeft="32dp"
                    app:srcCompat="@drawable/mood_activities" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkbox_necessary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="32dp"
                        android:layout_marginTop="18dp"
                        android:adjustViewBounds="true"
                        android:padding="0sp"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:id="@+id/txt_activities"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="16dp"
                        android:text="일찍 일어나기"
                        android:textColor="@android:color/white"
                        android:textSize="16.5sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/bar2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    app:srcCompat="@drawable/mood_ber" />

                <ImageView
                    android:id="@+id/imgText_goal2"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginBottom="8dp"
                    android:adjustViewBounds="true"
                    android:padding="0sp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/mood_goal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkbox_goal"
                        android:layout_width="28dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="32dp"
                        android:layout_marginTop="12dp"
                        android:adjustViewBounds="true"
                        android:padding="0sp"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:id="@+id/txt_goal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="16dp"
                        android:text="일찍 일어나기"
                        android:textColor="@android:color/white"
                        android:textSize="16.5sp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>