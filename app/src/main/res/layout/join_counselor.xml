<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_sign_lor"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        tools:srcCompat="@tools:sample/avatars[15]" />

    <ImageView
        android:id="@+id/img_counselor"
        android:layout_width="match_parent"
        android:layout_height="102dp"
        tools:srcCompat="@tools:sample/avatars[4]" />

    <EditText
        android:id="@+id/editText_m_name"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:hint="이름"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/editText_m_email"
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="이메일"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/editText_m_phone"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:ems="10"
        android:inputType="phone"
        android:hint="핸드폰"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/editText_m_password"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="비밀번호"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btn_send_m"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="보내기" />
</LinearLayout>
