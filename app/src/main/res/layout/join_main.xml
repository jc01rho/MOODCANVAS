<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mood_bg"
    android:orientation="vertical"
    tools:context=".JoinActivity">

    <ImageView
        android:id="@+id/img_bar_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:padding="0sp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/mood_bar_signup" />

    <ImageButton
        android:id="@+id/btn_send_counselor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:padding="0sp"
        android:scaleType="fitCenter"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="220dp"
        app:srcCompat="@drawable/mood_button_counselor" />

    <ImageButton
        android:id="@+id/btn_send_counselee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:padding="0sp"
        android:scaleType="fitCenter"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="55dp"
        app:srcCompat="@drawable/mood_button_counslee" />


    <!--  로그인 화면으로 바로 넘어가게 하기 -->
    <ImageButton
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:padding="0sp"
        android:scaleType="fitCenter"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="170dp"
        android:layout_marginBottom="52dp"
        app:srcCompat="@drawable/mood_buttom_next" />

</LinearLayout>