<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mood_bg"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img_bar_signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:padding="0sp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/mood_bar_signin" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="581dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editText_signin_email"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="200dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/mood_textblock_big"
            android:hint="이메일" />

        <EditText
            android:id="@+id/editText_signin_password"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="35dp"
            android:layout_marginVertical="25dp"
            android:background="@drawable/mood_textblock_big"
            android:hint="비밀번호" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/bt_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="52dp"
        android:adjustViewBounds="true"
        android:padding="0sp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/mood_buttom_next" />
</LinearLayout>