<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mood_bg"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img_bar_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:adjustViewBounds="true"
        android:padding="0sp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/mood_bar_signup" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgText_goal"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="32dp"
            android:layout_marginBottom="8dp"
            android:adjustViewBounds="true"
            android:padding="0sp"
            android:scaleType="fitCenter"
            android:layout_marginVertical="22dp"
            app:srcCompat="@drawable/mood_goal" />

        <EditText
            android:id="@+id/editText_goal"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:hint="행동목표를 기록하세요."
            android:background="@drawable/mood_textblock_big" />

        <ImageButton
            android:id="@+id/bt_goal_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0sp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp"
            app:srcCompat="@drawable/mood_button_save" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            app:srcCompat="@drawable/mood_ber" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/img_check_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="16dp"
                android:adjustViewBounds="true"
                android:padding="0sp"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/txt_activities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="12dp"
                android:text="일찍 일어나기"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/bt_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="52dp"
        android:adjustViewBounds="true"
        android:padding="0sp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/mood_buttom_next" />

</LinearLayout>